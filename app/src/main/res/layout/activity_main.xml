<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">

    <TextView android:text="@string/hello_world" android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtTulisan" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/tombol_terjemah_id"
        android:id="@+id/btnTerjemah_Id"
        android:layout_marginTop="101dp"
        android:onClick="onClickTombolTerjemahId"
        android:layout_below="@+id/txtTulisan"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/tombol_terjemah_en"
        android:id="@+id/btnTerjemah_En"
        android:onClick="onClickTombolTerjemahEn"
        android:layout_below="@+id/btnTerjemah_Id"
        android:layout_alignLeft="@+id/btnTerjemah_Id"
        android:layout_alignStart="@+id/btnTerjemah_Id"
        android:layout_alignRight="@+id/btnTerjemah_Id"
        android:layout_alignEnd="@+id/btnTerjemah_Id" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/tombol_terjemah_ac"
        android:id="@+id/btnTerjemah_Ac"
        android:onClick="onClickTombolTerjemahAc"
        android:layout_below="@+id/btnTerjemah_En"
        android:layout_alignLeft="@+id/btnTerjemah_En"
        android:layout_alignStart="@+id/btnTerjemah_En"
        android:layout_alignRight="@+id/btnTerjemah_En"
        android:layout_alignEnd="@+id/btnTerjemah_En" />

</RelativeLayout>
